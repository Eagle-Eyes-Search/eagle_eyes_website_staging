    @media (max-width: 768px) {
        /* Make sure the row becomes a flex container with vertical stacking */
        #scan-features .row {
            display: flex;
            flex-direction: column;
        }
        /* For the Scan section, push the video column (which has the class .media) to appear second */
        #scan-features .media {
            order: 2;
        }
        /* And have the text column (which does not have .media) appear first */
        #scan-features .column:not(.media) {
            order: 1;
        }
    } 